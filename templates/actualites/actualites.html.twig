{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}
{% block body %}
    <div class = 'container'>
        <header class="row">
            <div class="col-lg-12">
                <h1 id = 'titleActus'>Actualités</h1>
            </div>
        </header>

        <div id = 'actualites' class="row">
            {% for article in articles %}
                <div class = 'col-sm-12'>
                    <hr />
                    <div class="col-sm-6">
                        {% if article.image %}
                            <img id = 'sizeImage' src = "{{ asset('assets/img/') }}{{ article.image }}" />
                        {% else %}
                            <h1 id = 'titleActus'>Pas d'image associée !</h1>
                        {% endif %}
                    </div>
                    <div id = 'article' class="col-sm-6">
                        <h3 id = 'articleTitle'>{{ article.title }}</h3><br />
                        <div id = 'contentArticle'>{{ article.content|slice(1, 500) }}...</div>
                        <br />
                        <a href = "{{ path('blog',{'id': article.id }) }}"><button id = 'btnArticle' class = 'btn btn-default'>Lire l'article</button></a>
                        <br />
                    </div>
                </div>
            {% endfor %}
        </div>
        <hr />

    </div>
{% endblock %}