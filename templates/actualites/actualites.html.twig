{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}
{% block body %}
    <div class = 'container'>
        <header class="row">
            <div class="col-lg-12">
                <h1 id = 'titleActus'>Actualités</h1>
            </div>
        </header>

        <div id = 'actualites' class="row">
            {% for article in articles %}
                <div class = 'col-sm-12'>
                    <hr />
                    <div class="col-sm-6">
                        <img id = 'sizeImage' src = "{{ asset('assets/img/') }}{{ article.image }}" />
                    </div>
                    {#<div class = 'col-sm-2'></div>#}
                    <div id = 'article' class="col-sm-6">
                        <h3 id = 'articleTitle'>{{ article.title }}</h3><br />
                        {{ article.content }}
                        <br />
                        <a href = "{{ path('blog',{'id': article.id }) }}"><button id = 'btnArticle' class = 'btn btn-default'  }}">Lire l'article</button></a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}