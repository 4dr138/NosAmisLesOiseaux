{% extends 'base.html.twig' %}

{% block title %}Actualités{% endblock %}
{% block body %}
    <div class = 'container'>
        <header class="row">
            <div class="col-lg-12">
                <h1>Actualités</h1>
            </div>
        </header>

        <div id = 'actualites' class="row">
            {% for article in articles %}
                <div class = 'col-sm-10'>
                    <hr />
                    <div class="col-sm-5">
                        <img id = 'sizeImage' src = "{{ asset('assets/img/') }}{{ article.image }}" />
                    </div>
                    <div id = 'article' class="col-sm-5">
                        {{ article.title }}<br />
                        {{ article.content }}
                        <p><a href = "{{ path('blog',{'id': article.id }) }}">Voir la totalité de l'article...</a></p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}