{% extends "base.html.twig" %}
{% block title %}Espace Administration{% endblock %}
{% block body %}
<div class = 'container'>
    <div class = 'row'>
        <div id = 'loginUser' class = 'col-sm-12'>
            <h1>Espace Administration</h1>
            <br />
            <form id = 'formLogin' class = 'form-horizontal' action="{{ path('login') }}" method="post">
                <div class = 'form-group'>
                    <label for="username">Nom d'utilisateur :</label>
                    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
                </div>
                <div class = 'form-group'>
                    <label for="password">Mot de passe :</label>
                    <input class="form-control" type="password" id="password" name="_password" /><button class = 'unmask' type = 'button' >Afficher le mot de passe</button>
                </div>
                <div class = 'form-group'>
                    <input type = "hidden" name = "_target_path" value = "{{ path('admin') }}" />
                    <button type="submit" id ='validLogin' class="btn btn-default">Se connecter</button>
                </div>
            </form>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
{% block javascripts %}
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script src = '{{ asset('assets/js/inscription.js') }}'></script>
{% endblock %}