{% extends "base.html.twig" %}
{% block title %}Formulaire de connexion{% endblock %}
{% block body %}
<h2>Bienvenue sur votre espace d'identification </h2>
<div class = 'container'>
    <div class = 'row'>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h4 id ='h4'>Veuillez entrer vos identifiants de connexion ci-dessous si vous avez déjà rejoint notre communauté : </h4>
                <form id = 'formLogin' class = 'form-horizontal' action="{{ path('login') }}" method="post">
                    <div class = 'form-group'>
                        <label class="control-label col-sm-2" for="username">Username:</label>
                        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
                    </div>
                    <div class = 'form-group'>
                        <label class="control-label col-sm-2" for="password">Password:</label>
                        <input class="form-control" type="password" id="password" name="_password" />
                    </div>
                    <div class = 'form-group'>
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type = "hidden" name = "_target_path" value = "{{ path('admin') }}" />
                            <button type="submit" id ='validLogin' class="btn btn-default">S'identifier</button>
                        </div>
                    </div>
                </form>
    </div>
</div>
{% endblock %}