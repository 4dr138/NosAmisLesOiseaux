

{% block carousel %}
<div id="carousel-example-generic" class="carousel slide" data-ride="carousel"> 
                        <!-- Indicators -->
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-example-generic" data-slide-to="1" class="active"></li>
                           
                            <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="3"></li>
                            <li data-target="#carousel-example-generic" data-slide-to="4"></li>
                        </ol>

                        <!-- Wrapper for slides -->
                        <div class="carousel-inner" role="listbox">
                            <div class="item active">
                                
                                <img src="{{ asset('assets/img/slide2.jpg') }}" alt="">
                                <div class="carousel-caption">
                                    <a name="nom-de-votre-ancre" href = '{{ path('inscription') }}' class="btn btn-default" id ='btnAddObs'>S'inscrire</a>
                                    <a name="nom-de-votre-ancre" href = '{{ path('connexion') }}' class="btn btn-default"  id ='btnConnObs'>Se Connecter</a>
                                   <!--  <h1>Comment ça marche ?</h1> -->
                                    <p class="descriptifCarousel">Partagez vos observations et vivez une expérience inoubliable.</p>
                                </div>
                            </div>
                            
                            <div class="item">
                                <img src="{{ asset('assets/img/flamand2.png') }}" alt="">
                                <div class="carousel-caption">
                                    <a name="nom-de-votre-ancre" href = "{{ path('blog', {'id': LastArticleId}) }}" class="btn btn-default" id ='btnAddObs'>Lire l'article</a>
                                    <h1>Dernière actualité</h1>
                                    <p class="descriptifCarousel">Quelles sont les dernières nouvelles de l'assocation ?</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="{{ asset('assets/img/reunion.png') }}" alt="" >
                                <div class="carousel-caption">
                                    <a name="nom-de-votre-ancre" class="btn btn-default" id ='btnAddObs' href = "{{ path('contact') }}" >Contactez nous</a>
                                    <h1>Contact</h1>
                                    <p class="descriptifCarousel">Une question ? Une remarque ? Posez-la nous sommes là pour y répondre.</p>
                                </div>
                            </div>
                            <div class="item">
                                <img src="{{ asset('assets/img/donationfly.png') }}" alt="">
                                <div class="carousel-caption">
                                    <a name="nom-de-votre-ancre" class="btn btn-default" id ='btnAddObs' href = "{{ path('donation') }}">Faire un don</a>
                                    <h1>Donation</h1>
                                    <p class="descriptifCarousel">Vous voulez contribuer au developpement de l'association, aidez-nous ?</p>
                                </div>
                            </div>
                        </div>

                        <!-- Controls -->
                        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>

{% endblock carousel %}