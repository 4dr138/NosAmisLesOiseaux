{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block body %}
    <div class="container">
        <div class="row" id = 'formContact'>
            <div class="col-md-6 col-md-offset-3">
                <div class="well well-sm">
                    <form class="form-horizontal" action="{{ path('contact') }}" method="post">
                        <fieldset>
                            <h2 id = 'h2'>Contact</h2>

                            <!-- Name input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="name">Nom et prénom<span class = 'obligatoire'>*</span></label>
                                <div class="col-md-9">
                                    <input id="name" name="name" type="text" placeholder="Vos nom et prénom" class="form-control" required />
                                </div>
                            </div>

                            <!-- Email input-->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="email">Votre e-mail<span class = 'obligatoire'>*</span></label>
                                <div class="col-md-9">
                                    <input id="email" name="email" type="text" placeholder="Votre e-mail" class="form-control" required />
                                </div>
                            </div>

                            <!-- Message body -->
                            <div class="form-group">
                                <label class="col-md-3 control-label" for="message">Votre message<span class = 'obligatoire'>*</span></label>
                                <div class="col-md-9">
                                    <textarea class="form-control" id="message" name="message" placeholder="Veuillez saisir votre message" rows="10" required></textarea>
                                </div>
                            </div>

                            <!-- Form actions -->
                            <div class="form-group">
                                <div class="col-md-12 text-right">
                                    <button id = 'submitContact' type="submit" class="btn btn-primary btn-lg">Envoyer</button>
                                </div>
                            </div>
                            <span class = 'obligatoire'>* Champs obligatoires</span>
                            {% for message in app.flashes('success') %}
                                <div class="flash-notice">
                                    <strong>{{ message }}</strong>
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('error') %}
                                <div class="flash-notice">
                                    <strong>{{ message }}</strong>
                                </div>
                            {% endfor %}
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}