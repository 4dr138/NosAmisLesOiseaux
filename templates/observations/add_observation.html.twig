{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <div class = 'container'>
        <div class = 'row'>
            <div class ='col-lg-12'>
                <h2 id = 'titleSoumission' >Soumettre mon observation : </h2>
                <div class = 'col-lg-6'>
                    {{ form_start(form) }}
                    {{ form_end(form) }}
                    {% for message in app.flashes('success') %}
                        <div class="flash-notice">
                            <strong>{{ message }}</strong>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="flash-notice">
                            <strong>{{ message }}</strong>
                        </div>
                    {% endfor %}
                </div>
                <div class = 'col-lg-6'>



                </div>
            </div>
        </div>
    </div>
{% endblock %}