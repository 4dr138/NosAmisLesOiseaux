{% extends 'base.html.twig' %}

{% block body %}
<div class = 'container'>
    {% for birdSolo in bird %}
        <h1 id = 'titleBird'>Nom de l'espèce : <strong>{{ birdSolo.taxrefVern }}</strong></h1>
        <div id = 'birdSolo' class = 'col-lg-12'>
            <p>Date de référencement : {{ birdSolo.dateObservation|date('d-m-Y') }}</p>
            <p>Référence TAXREF : {{ birdSolo.taxrefCdName }}</p>
            <p>Classe : {{ birdSolo.taxrefClass }}</p>
            {% if birdSolo.latitude %}
                <p>Localisation : <strong>{{ birdSolo.latitude }}°</strong> et <strong>{{ birdSolo.longitude }}°</strong></p>
            {% endif %}
            <p>Espèce protégée ? {% if birdSolo.protected == false %} Non {% else %} Oui {% endif %}</p>
            <p>Famille : {{ birdSolo.family }}</p>
            {% if birdSolo.status %}
            <p>Statut : {{ birdSolo.status }}</p>
            {% endif %}
            <p>Lien vers plus d'informations sur la base nationale INPI : <a href = "{{ birdSolo.taxrefUrlImage }}">Ici ! </a></p><hr />
            <p>Commentaire : {{ birdSolo.comment }}</p>
        </div>
    {% endfor %}
</div>

{% endblock %}