{% extends 'base.html.twig' %}
{% block body %}
  {% if app.session.flashBag.has('chargeFailed') %}
    <div class="alert alert-danger">
        {% for msg in app.session.flashBag.get('chargeFailed') %}
            {{ msg }}
        {% endfor %}
    </div>
  {% endif %}
  <h2>Faites un don</h2>
  <form action="{{ path('gift') }}" method="post">
    <p>Votre nom   <span style="color:#ff0000;">*</span>: <br /><input type="text" name="name" size="30" /></p>
    <p>Votre prénom   <span style="color:#ff0000;">*</span>: <br /><input type="text" name="firstname" size="30" /></p>
    <p>Votre mail   <span style="color:#ff0000;">*</span>: <br /><input type="mail" name="email" size="30" /></p>
    <p>Votre don   <span style="color:#ff0000;">*</span>: <br /><input type="text" name="amount" size="30" /></p>
    <!-- <input type="text" name="name" placeholder="nom"><br> -->
    <!-- <input type="text" name="prenom" placeholder="prénom"><br>
    <input type="mail" name="mail" placeholder="mail"><br>
    <input type="text" name="data-amount" placeholder="faire un don"><br> -->
    <input type="hidden" name="commandId" value="">
		<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="{{ publishable_key }}"
      data-description="{{ description }}"
      data-amount= "data-amount*100"
      data-email="$_POST['email']"
      data-currency="eur"
      data-image="{{ asset('assets/img/logo.png') }}"
      data-locale="fr">  	
    </script>
	</form>
{% endblock %}